{
  "name": "template-angular-app",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "start": "pnpm exec ng serve",
    "start:http": "pnpm exec ng serve -c http",
    "gen:version": "node build/write-version.mts",
    "gen:certificates": "mkcert -cert-file cert.pem -key-file cert-key.pem localhost.template-angular-app.dndmapp.dev localhost 127.0.0.1",
    "build": "pnpm exec ng build",
    "build:dev": "pnpm exec ng build -c dev",
    "test:install-browsers": "pnpm exec playwright install chromium --with-deps",
    "test": "pnpm exec vitest run",
    "test:dev": "pnpm exec vitest --ui",
    "test:coverage-reports": "pnpm exec vite preview --outDir ./reports/unit-tests --open",
    "e2e:install-browsers": "pnpm exec playwright install chromium firefox webkit --with-deps",
    "e2e": "pnpm exec playwright test -c e2e/playwright.config.ts",
    "e2e:dev": "pnpm exec playwright test -c e2e/playwright.config.ts --ui",
    "lint": "pnpm exec ng lint",
    "stylelint": "pnpm exec stylelint \"**/*.scss\"",
    "markdownlint": "pnpm exec markdownlint \"**/*.md\"",
    "format:check": "pnpm exec prettier -l .",
    "format:write": "pnpm exec prettier -w .",
    "docker:check": "docker buildx build -f .docker/Dockerfile --check .",
    "docker:build": "docker buildx build -f .docker/Dockerfile -t dndmapp/template-angular-app:latest .",
    "docker:bake": "docker buildx bake -f .docker/docker-bake.hcl",
    "docker-compose:build": "docker compose -f .docker/compose.yaml build",
    "docker-compose:up": "docker compose -f .docker/compose.yaml up -d",
    "docker-compose:down": "docker compose -f .docker/compose.yaml down",
    "release:update-changelog": "node scripts/update-changelog.mts",
    "release:extract-changelog": "node scripts/extract-changelog-section.mts"
  },
  "dependencies": {
    "@angular/cdk": "~21.0.0",
    "@angular/common": "~21.0.0",
    "@angular/compiler": "~21.0.0",
    "@angular/core": "~21.0.0",
    "@angular/forms": "~21.0.0",
    "@angular/platform-browser": "~21.0.0",
    "@angular/router": "~21.0.0",
    "@tailwindcss/postcss": "~4.1.0",
    "postcss": "~8.5.0",
    "rxjs": "~7.8.0",
    "tailwindcss": "~4.1.0",
    "tslib": "~2.8.0"
  },
  "devDependencies": {
    "@analogjs/platform": "~2.2.0",
    "@analogjs/vite-plugin-angular": "~2.2.0",
    "@analogjs/vitest-angular": "~2.2.0",
    "@angular-eslint/builder": "~21.1.0",
    "@angular/build": "~21.0.0",
    "@angular/cli": "~21.0.0",
    "@angular/compiler-cli": "~21.0.0",
    "@dotenvx/dotenvx": "~1.51.0",
    "@eslint/js": "~9.39.0",
    "@playwright/test": "~1.57.0",
    "@types/node": "~24.10.0",
    "@vitest/browser-playwright": "~4.0.0",
    "@vitest/coverage-v8": "~4.0.0",
    "@vitest/ui": "~4.0.0",
    "angular-eslint": "21.1.0",
    "eslint": "~9.39.0",
    "eslint-config-prettier": "~10.1.0",
    "markdownlint": "~0.40.0",
    "markdownlint-cli": "~0.47.0",
    "playwright": "~1.57.0",
    "prettier": "~3.7.0",
    "prettier-plugin-organize-imports": "~4.3.0",
    "prettier-plugin-tailwindcss": "~0.7.0",
    "stylelint": "~16.26.0",
    "stylelint-config-standard-scss": "~16.0.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "~8.50.0",
    "vite": "~7.3.0",
    "vite-tsconfig-paths": "~6.0.0",
    "vitest": "~4.0.0"
  }
}
